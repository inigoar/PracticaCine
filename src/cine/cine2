public class Cine {
	private String nombre;
	private Sala[] salas;

	public Cine(String nombre, Sala[] salas) {
		this.nombre = nombre;
		this.salas = salas;
	}
	/*void comprarEntrada (int sala, int sesion, int fila, int columna){
